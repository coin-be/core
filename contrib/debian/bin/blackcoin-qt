#!/bin/sh

set -e

umask 077

basedir=~/.coinbe
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/coinbe.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# CoinBe does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/coinbe/coinbe-qt "$@"
